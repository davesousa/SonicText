{
  "name": "sonictext",
  "version": "1.0.0",
  "description": "AI-powered voice dictation app",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc && copy src\\index.html dist\\index.html && copy src\\settings.html dist\\settings.html && copy src\\optimize.html dist\\optimize.html",
    "watch": "tsc -w",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "voice",
    "dictation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/electron-localshortcut": "^3.1.3",
    "@types/node": "^22.13.5",
    "dotenv": "^16.4.7",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "electron-localshortcut": "^3.2.1",
    "openai": "^4.85.4",
    "typescript": "^5.7.3"
  },
  "build": {
    "appId": "com.sonictext.app",
    "win": {
      "target": "nsis"
    }
  }
}
