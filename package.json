{
  "name": "sonictext",
  "version": "1.1.3",
  "description": "A powerful desktop application that converts speech to text in real-time",
  "main": "dist/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "tsc",
    "start": "electron .",
    "package": "electron-builder build --windows --config.win.target=portable --config.win.signAndEditExecutable=false",
    "postbuild": "copyfiles src/css/*.css dist/css"
  },
  "author": "Dave Sousa",
  "license": "Apache-2.0",
  "dependencies": {
    "openai": "^4.12.5"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^20.8.10",
    "copyfiles": "^2.4.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.davesousa.sonictext",
    "productName": "SonicText",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis"
    }
  }
}
